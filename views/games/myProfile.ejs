<style>
.modal-content {
    box-shadow: 0 25px 60px rgba(0,0,0,0.6);
}

.modal-header {
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.form-control,
.form-select {
    background: #12121a;
    border: 1px solid #2a2a3c;
    color: #fff;
}

.form-control:focus,
.form-select:focus {
    border-color: #ffc107;
    box-shadow: none;
}

.profile-card {
    background: linear-gradient(135deg, #1e1e2f, #12121c);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 25px 60px rgba(0,0,0,0.45);
    color: #fff;
}

.profile-header {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 30px;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
}

.avatar {
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 700;
}

.balance {
    margin-top: 10px;
    font-size: 32px;
    font-weight: 800;
    color: #00e676;
}
</style>

<div class="container py-5">
  <div class="profile-card">
    <div class="profile-header">
      <div class="avatar">
        <span><%= user.name.charAt(0).toUpperCase() %></span>
      </div>
      <div>
        <h4><%= user.name %></h4>
        <p class="text-muted"><%= user.email %></p>
        <% if (user.is_admin) { %>
          <span class="badge bg-warning text-dark">Admin</span>
        <% } %>
      </div>
    </div>

    <div class="p-4">
      <h5>Wallet Balance</h5>
      <h2 class="balance">$<%= user.balance %></h2>

      <div class="mt-4">
        <button class="btn btn-success" onclick="openRechargeModal()">Recharge Wallet</button>
        <button class="btn btn-danger" onclick="openWithdrawModal()">Withdraw Money</button>
      </div>
    </div>
  </div>
</div>

<!-- Recharge Wallet Modal -->
<div class="modal fade" id="rechargeModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-light border-0 rounded-4">

      <div class="modal-header border-secondary">
        <h5 class="modal-title text-warning">
          <i class="bi bi-wallet2"></i> Recharge Wallet
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <form id="rechargeForm">

          <div class="mb-3">
            <label class="form-label">Amount</label>
            <input type="number" class="form-control" name="amount" min="10" placeholder="Enter amount" required>
            <small class="text-muted">Minimum recharge: 10</small>
          </div>

          <div class="mb-3">
            <label class="form-label">Payment Method</label>
            <select id="paymentMethod" class="form-select bg-dark text-light border-secondary" required>
              <option value="">Select method</option>
              <option value="upi">UPI</option>
              <option value="card">Credit / Debit Card</option>
              <option value="crypto">Crypto (USDT)</option>
            </select>
          </div>

          <div id="cryptoSection" style="display:none">

            <div class="alert alert-warning small mt-3">
              IMPORTANT: Send USDT in BEP-20 network only.<br>
              Depositing to any other network may result in permanent loss of assets.
            </div>

            <div class="mb-3">
              <label class="form-label">BEP-20 Deposit Address</label>
              <input type="text" id="bep20Address" class="form-control text-warning" readonly>
            </div>

            <div class="mb-3 text-center">
              <img id="qrCode" style="max-width:200px;">
            </div>

            <div class="alert alert-secondary small">
              Monitoring this address for 20 minutes.<br>
              Status: <span id="depositStatus">Waiting for payment...</span>
            </div>

            <div class="alert alert-danger small">
              NOTE: Only deposit to BEP-20 network.<br>
              Otherwise assets may be permanently lost.
            </div>

          </div>

          <button id="payButton" type="submit" class="btn btn-success w-100">
            Proceed to Pay
          </button>

        </form>
      </div>

    </div>
  </div>
</div>

<!-- Withdraw Money Modal -->
<div class="modal fade" id="withdrawModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-light border-0 rounded-4">

      <div class="modal-header border-secondary">
        <h5 class="modal-title text-danger">
          <i class="bi bi-arrow-down-circle"></i> Withdraw Money
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <form id="withdrawForm">

          <div class="mb-3">
            <label class="form-label">Available Balance</label>
            <input type="text" class="form-control" value="<%= user.balance %>" disabled>
          </div>

          <div class="mb-3">
            <label class="form-label">Withdraw Amount</label>
            <input type="number" class="form-control" name="amount" min="10" max="<%= user.balance %>" placeholder="Enter amount" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Withdraw To</label>
            <select id="withdrawMethod" class="form-select bg-dark text-light border-secondary" required>
              <option value="">Select destination</option>
              <option value="bank">Bank Account</option>
              <option value="upi">UPI</option>
              <option value="crypto">Crypto Wallet (USDT)</option>
            </select>
          </div>

          <div id="withdrawCryptoSection" style="display:none">
            <label class="form-label mt-2">Enter BEP-20 Wallet Address</label>
            <input type="text" id="withdrawWallet" name="wallet_address" class="form-control" placeholder="Enter USDT BEP-20 wallet" required>
            <div class="alert alert-warning small mt-2">
              Only BEP-20 network wallet address allowed.
            </div>
          </div>

          <button type="submit" class="btn btn-danger w-100 mt-3">
            Request Withdrawal
          </button>

        </form>
      </div>

    </div>
  </div>
</div>


<script>
function openRechargeModal() {
  const modal = new bootstrap.Modal(document.getElementById('rechargeModal'));
  modal.show();
}

function openWithdrawModal() {
  const modal = new bootstrap.Modal(document.getElementById('withdrawModal'));
  modal.show();
}

document.getElementById('paymentMethod').addEventListener('change', async function() {

  const amount = document.querySelector('#rechargeForm input[name="amount"]').value;

  if (this.value === 'crypto') {

    document.getElementById('cryptoSection').style.display = 'block';
    document.getElementById('payButton').style.display = 'none';

    const res = await fetch('/wallet/generate', {
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({amount})
    });

    const data = await res.json();

    document.getElementById('bep20Address').value = data.address;
    document.getElementById('qrCode').src = data.qr;

    startMonitoring(data.address, amount);

  } else {

    document.getElementById('cryptoSection').style.display = 'none';
    document.getElementById('payButton').style.display = 'block';
  }

});


document.getElementById('withdrawMethod').addEventListener('change', function() {

  if (this.value === 'crypto') {
    document.getElementById('withdrawCryptoSection').style.display = 'block';
  } else {
    document.getElementById('withdrawCryptoSection').style.display = 'none';
  }

});


async function startMonitoring(address, expectedAmount) {

  let elapsed = 0;

  const interval = setInterval(async ()=> {

    elapsed += 10;

    const response = await fetch('/wallet/check', {
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({address,expectedAmount})
    });

    const data = await response.json();

    document.getElementById('depositStatus').innerText = data.status;

    if (data.status === 'confirmed' || elapsed >= 1200) {
      clearInterval(interval);
    }

  },10000);

}
</script>
