          <div class="mb-3">
            <label class="form-label">Tickets (Max 5)</label>
            <input type="number" min="1" max="5"
              name="tickets"
              class="form-control" required>
          </div>

          <!-- Amount -->
          <div class="mb-3">
            <label class="form-label">Amount (AED 2â€“200)</label>
            <input type="number" min="2" max="200"
              step="1"
              name="amount"
              class="form-control" required>
          </div>

          <p class="text-light small">
            Payout:
            <strong>Amount Ã— 40</strong>
