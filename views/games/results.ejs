<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: radial-gradient(circle at top, #1a1a2e, #0f0f1a);
            color: #fff;
        }

        .card {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 16px;
        }

        .table thead {
            background: rgba(255,255,255,0.1);
        }

        .table tbody tr:hover {
            background: rgba(255,255,255,0.05);
        }

        .badge-win {
            background: linear-gradient(135deg, #00c853, #64dd17);
        }

        .badge-game {
            background: linear-gradient(135deg, #7c4dff, #651fff);
        }

        .result-number {
            font-size: 1.2rem;
            font-weight: 700;
            color: #00e676;
        }

        .empty-state {
            text-align: center;
            padding: 60px 0;
            opacity: 0.8;
        }
    </style>
</head>

<body>

<div class="container py-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-trophy-fill text-warning"></i> Game Results
            </h2>
            <p class="text-light opacity-75 mb-0">Latest completed draws</p>
        </div>

        <span class="badge badge-game px-3 py-2">
            Total Results: <%= results.length %>
        </span>
    </div>

    <!-- Results Card -->
    <div class="card shadow-lg">
        <div class="card-body p-0">

            <% if (results.length === 0) { %>
                <div class="empty-state">
                    <i class="bi bi-emoji-frown fs-1 text-warning"></i>
                    <h5 class="mt-3">No Results Found</h5>
                    <p class="text-light opacity-75">Results will appear once draws are completed.</p>
                </div>
            <% } else { %>

            <div class="table-responsive">
                <table class="table table-dark table-borderless align-middle mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Game</th>
                            <th>Draw Time</th>
                            <th>Winning Number</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach((row, index) => { %>
                            <tr>
                                <td class="text"><%= index + 1 %></td>

                                <td>
                                    <div class="fw-semibold"><%= row.name %></div>
                                    <small class="text-muted">Code: <%= row.code %></small>
                                </td>

                                <td>
                                    <i class="bi bi-clock text-info"></i>
                                    <%= new Date(row.draw_time).toLocaleString() %>
                                </td>

                                <td class="result-number">
                                    <%= row.winning_number %>
                                </td>

                                <td>
                                    <span class="badge badge-win">
                                        <i class="bi bi-check-circle-fill"></i> Completed
                                    </span>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <% } %>
        </div>
    </div>

</div>

</body>
</html>
